{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "FocusLock",
  "identifier": "com.focuslock.desktop",
  "build": {
    "frontendDist": "../dist/public",
    "devUrl": "http://localhost:5000",
    "beforeBuildCommand": "",
    "beforeDevCommand": ""
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "FocusLock - Focus Session Manager",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "minWidth": 800,
        "minHeight": 600,
        "devtools": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src ipc: ipc://localhost http://localhost:5000; img-src 'self' data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}